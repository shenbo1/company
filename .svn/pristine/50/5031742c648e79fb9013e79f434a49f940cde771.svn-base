/*---------   less    --------*/
@r: 75rem;

//项目主色
@col-main: #6eb3e9;
//边框颜色
@col-bor: #ececec;
//文字基本色-黑色
@col-black: #282828;

@col-grey: #acacac;
//背景色-灰色
@bac-grey: #f1f1f1;
//字体颜色
p,a,nav,span,div,li,h1,h2,h3,h4,h5,h6,input{
  font-size: 24/@r;
  color: @col-black;
}
textarea{
  line-height: 24/@r;
}

input:-ms-input-placeholder{color: @col-grey;}/* Internet Explorer 10+ */
input::-webkit-input-placeholder{color:@col-grey;}/* WebKit browsers */
input::-moz-placeholder{color:@col-grey;}/* Mozilla Firefox 4 to 18 */
input:-moz-placeholder{color:@col-grey;}

textarea::-webkit-input-placeholder {
  color: @col-grey;
}
textarea:-moz-placeholder {
  color: @col-grey;
}
input:disabled{
  background-color: #fff;
}

/*---------   layui    --------*/
.layui-m-layerbtn span[yes]{
  color: @col-main;
}

.layer-ui-title{
  padding-bottom: 50/@r;
  font-size: 28/@r;
  color: @col-grey;
}

.layer-ui-inp{
  display: block;
  width: 80%;
  margin: 0 auto;
  padding: 10/@r;
  font-size: 50/@r;
  font-weight: bold;
  text-align: center;
  border-bottom: 2px solid #000;
}
.layer-ui-textarea{
  display: block;
  height: 230/@r;
  width: 100%;
  padding: 20/@r;
  line-height: 32/@r;
  border-color: @col-bor;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

/*---------   公共样式    --------*/
/*--------   显示1行文本   -------*/
.u-one-line{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

/*--------- 垂直、水平居中 ------*/
.u-cc{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

/*--------- 水平居中  ---------*/
.u-cl{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

/*--------- 垂直居中  ---------*/
.u-ct{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

/*--------- 固定底部单个按钮 ------*/
.m-footer-btn{
  display: block;
  z-index: 5;
  position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
  height: 98/@r;
  padding-top: 0;
  font-size: 32/@r;
  line-height: 99/@r;
  color: @col-main;
  background-color: #fff;
  border-right: none;
  text-align: center;
  border: 1px solid @col-main;  
}

/*--------- 无信息模块 ------*/
.m-nothing{
  display: none;
  width: 100%;
  margin-top: 40%;
  text-align: center;
  img{
    height: 230/@r;
  }
  p{
    padding-top: 50/@r;
    font-size: 32/@r;
    color: @col-grey;
  }
}

/*--------- 遮罩层 ------*/
.m-mask{
  z-index: 9;  
  display: none;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  position: absolute;
  top: 0;
  left: 0;
  transition: 5s;
}

.g-page{
  position: relative;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.g-container{
  height: 100%;
  width: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

/*---------   主体    --------*/

.reim{
  padding-bottom: 98/@r;
  .top-part{
    position: relative;
    height: 130/@r;
    padding: 0 40/@r 0 130/@r;
    border-bottom: 1px solid @col-grey;
    .img-box{
      z-index: 2;
      position: absolute;
      top: 30/@r;
      left: 40/@r;
      height: 70/@r;
      width: 70/@r;
      background: url(../images/icon/no_photo.png) no-repeat;
      background-size: cover;
      border-radius: 50%;
      overflow: hidden;
      border: 1px solid @bac-grey;
      img{
        position: absolute;
        left: 50%;
        top: 50%;
        z-index: 1;
        height: 100%;
        transform: translateX(-50%);
        margin-top: -34/@r;
      }
    }
    .name{
      display: inline-block;      
      height: 130/@r;
      width: 100%;
      line-height: 131/@r;      
      font-size: 32/@r;
      vertical-align: top;
    }
  }
  .item{
    .item-link{
      padding: 20/@r 40/@r 10/@r;
      border-bottom: 1px solid @col-bor;
    }
    h2{
      font-size: 28/@r;
      line-height: 32/@r;
    }
  }
  .sm-list{
    margin-top: 20/@r;
    font-size: 0;
    .sm-item{
      display: inline-block;
      width: 50%;
      line-height: 36/@r;
      color: @col-grey;
      &:nth-of-type(even){
        text-align: right;
      }
      &:nth-of-type(2){
        span{
          font-size: 28/@r;
          color: #e89b63;
        }
      }
    }
  }
}

.reim-detail{
  padding-bottom: 158/@r;  
  .top-part{
    position: relative;
    height: 130/@r;
    padding: 0 230/@r 0 130/@r;
    border-bottom: 1px solid @col-grey;
    .img-box{
      z-index: 2;
      position: absolute;
      top: 30/@r;
      left: 40/@r;
      height: 70/@r;
      width: 70/@r;
      background: url(../images/icon/no_photo.png) no-repeat;
      background-size: cover;
      border-radius: 50%;
      overflow: hidden;
      border: 1px solid @bac-grey;
      img{
        position: absolute;
        left: 50%;
        top: 50%;
        z-index: 1;
        height: 100%;
        transform: translateX(-50%);
        margin-top: -34/@r;
      }
    }
    .name{
      display: inline-block;      
      height: 130/@r;
      width: 100%;
      line-height: 131/@r;      
      font-size: 32/@r;
      vertical-align: top;
    }
    .right-txt{
      right: 40/@r;
      font-size: 28/@r;
      color: #e89b63;
    }
  }
  .mid-part{
    padding: 0 40/@r;
  }
  .input-list{
    padding: 20/@r 0;
    .item{
      position: relative;
    }
    .input-box{
      position: relative;
      height: 50/@r;
      padding: 10/@r 0 10/@r 140/@r;      
    }
    .title{
      left: 0;
      color: @col-grey;
      font-size: 28/@r;
    }
    .txt{
      padding: 0 10/@r;
      width: 100%;
      font-size: 28/@r;      
    }
    &.bor-bot{
      border-bottom: 1px solid @col-bor;      
    }
    textarea{
      margin: 20/@r 0 10/@r;
      width: 100%;
      height: 280/@r;
      border-radius: 10/@r;
      border-color: @col-bor;
      &[disabled]{
        background-color: #fff;
      }
    }
  }
  .list-title{
    .txt{
      display: inline-block;
      padding: 22/@r 0;
      font-size: 28/@r;
      border-bottom: 1px solid @col-grey;
    }
  }
  .img_group{
    padding: 10/@r 0;
    font-size: 0;
    .img_box{
      position: relative;
      display: inline-block;
      height: 160/@r;
      width: 24%;
      margin-right: 1.333333333%;
      vertical-align: top;
      overflow: hidden;
      &:nth-of-type(4n){
        margin-right: 0;        
      }
      img{
        display: block;
        height: 100%;
      }
    }
  }
  .progress-list{
    .item{
      position: relative;
      padding: 15/@r 0 15/@r 120/@r;
      height: 130/@r;    
      font-size: 0;
      .img-box{
        z-index: 2;
        left: 0;
        height: 100/@r;
        border-radius: 50%;
        overflow: hidden;
        img{
          z-index: 1;        
          height: 100%;
        }
      }
      &:before{
        content: '';
        position: absolute;
        left: 50/@r;
        top: 115/@r;
        height: 30/@r;
        width: 0;
        border-left: 1px dotted @col-grey;
      }
      &:last-of-type{
        &:before{
          border: none;
        }
      }
    }
    .left-txt{
      display: inline-block;
      line-height: 100/@r;
      font-size: 28/@r;
    }
    .mid-txt{
      display: inline-block;    
      padding-left: 10/@r;
      color: @col-grey;
      line-height: 100/@r;    
      font-size: 24/@r;
      vertical-align: top; 
    }
    .right-txt{
      float: right;
      color: @col-grey;
      font-size: 24/@r;
      line-height: 100/@r;    
    }
    .col-ora{
      color: #e89b63;
    }
  }
}

.img-mask{
  display: none;
  z-index: 20;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  .mask{
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, .8);
  }
  img{
    max-width: 100%;
    max-height: 100%;
  }
}

.new-reim{
  padding-bottom: 180/@r;
  .mid-part{
    padding: 0 40/@r;
  }
  .top-title{
    padding-top: 44/@r;
    font-size: 28/@r;
  }
  .input-list{
    padding: 20/@r 0;
    .item{
      position: relative;
      border-bottom: 1px solid @col-bor;
      &.no-bor{
        border: none;
      }
    }
    .input-box{
      position: relative;
      height: 90/@r;
      padding: 10/@r 0 10/@r 140/@r;      
    }
    .title{
      left: 0;
      color: @col-grey;
      font-size: 28/@r;
    }
    .txt{
      padding: 0 10/@r;
      width: 100%;
      height: 100%;
      font-size: 28/@r;      
    }
    textarea{
      width: 100%;
      height: 280/@r;
      border-radius: 10/@r;
      border-color: @col-bor;
      &[disabled]{
        background-color: #fff;
      }
    }
  }
  // 上传图片
  .z_photo {
    width: 100%;
    min-height: 160/@r;
    margin: 10/@r auto;
    font-size: 0;
    img {
      height: 100%;
      width: 160/@r;
    }
  }
  .z_addImg {
    display: inline-block;
    margin: 0 1% 10/@r 0;
    height: 160/@r;
    vertical-align: top;
    &.nth-of-type(4n+3),&.nth-of-type(3){
      margin-right: 0;
    }
  }
  .z_file {
    display: inline-block;
    width: 24%;
    min-height: 160/@r;
    background: url(../images/icon/z_add.png) no-repeat;
    background-size: 100% 100%;
    margin: 0 1% 10/@r 0;
    vertical-align: top;
    input::-webkit-file-upload-button {
      width: 1rem;
      height: 1rem;
      border: none;
      position: absolute;
      outline: 0;
      opacity: 0;
    }
    input#file {
      display: none;
      width: auto;
      border: 0;
      vertical-align: middle;
    }
  }
}

